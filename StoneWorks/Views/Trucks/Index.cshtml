@model IEnumerable< StoneWorks.Models.Truck>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TruckNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChasisNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateofRegistration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsuranceExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHired)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TruckNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChasisNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateofRegistration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuranceExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHired)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TruckId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TruckId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TruckId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
