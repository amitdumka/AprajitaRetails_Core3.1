@model PaginatedList<AprajitaRetails.Models.ChequesLog>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Index</h1>

<p>
    <a class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().BankName)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().AccountNumber)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().ChequesDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().DepositDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().ClearedDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IssuedBy)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IssuedTo)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Amount)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IsPDC)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IsIssuedByAprajitaRetails)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IsDepositedOnAprajitaRetails)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Remarks)
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChequesDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepositDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClearedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuedTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPDC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsIssuedByAprajitaRetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDepositedOnAprajitaRetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
               <a  class="btn btn-outline-amber" id="edit" data_modal="" asp-action="Edit" asp-route-id="@item.ChequesLogId">Edit</a> |
               <a  class="btn btn-outline-info" id="detail" data_modal="" asp-action="Details" asp-route-id="@item.ChequesLogId">Details</a> |
               <a  class="btn btn-outline-danger" id="delete" data_modal="" asp-action="Delete" asp-route-id="@item.ChequesLogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_ModalPop" />