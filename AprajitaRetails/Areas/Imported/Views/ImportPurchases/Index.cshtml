@model IEnumerable<AprajitaRetails.Areas.Uploader.Models.ImportPurchase>

@{
    ViewData["Title"] = "Purchase Import";
}

<h2>Purchase (Imported)</h2>

<p>
    <a class="btn btn-sm btn-outline-blue" asp-action="Index">All</a>
    <a class="btn btn-sm btn-outline-green" asp-action="Index" asp-route-id="100">Processed</a>
    <a class="btn btn-sm btn-outline-orange" asp-action="Index" asp-route-id="101">Pending</a>
</p>
<table class="table table-sm table-striped table-hover table-bordered">
    <thead class="table-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Barcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StyleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MRP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MRPValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxAmt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVatBill)

            <th></th>
        </tr>
    </thead>
    <tbody class="table-success">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Barcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StyleCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MRP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MRPValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsVatBill)
                </td>

                <td class="btn-group btn-group-sm">
                    <a class="btn btn-outline-amber" asp-action="Edit" asp-route-id="@item.ImportPurchaseId">Edit</a>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ImportPurchaseId">Details</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ImportPurchaseId">Delete</a>
                    <a class="btn btn-outline-dark-green" asp-action="ProcessBill" asp-route-GrnNo="@item.GRNNo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Modalpop" />
