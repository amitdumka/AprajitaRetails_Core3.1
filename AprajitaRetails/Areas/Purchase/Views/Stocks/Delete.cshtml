@model AprajitaRetails.Areas.Purchase.Models.Stock

@{
    ViewData["Title"] = "Delete";
}



<h3 class="text-warning">Are you sure you want to delete this?</h3>
<div>
    <h4>Stock</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductItem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductItem.ProductName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaleQty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleQty)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseQty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchaseQty)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Units)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Units)
        </dd>
    </dl>
    
