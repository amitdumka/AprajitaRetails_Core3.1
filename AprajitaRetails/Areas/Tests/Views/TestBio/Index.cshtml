<h2>Testing of Bio Metric Devices </h2>

<div>
    <form method="post" asp-action="Index">
        <div class="form-row">
            <div class="form-control">
                Ip Address: <input type="text" name="ipAddress" id="ipAddress" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-control">
                Port No: <input type="number" name="portNo" id="portNo" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-control">
                <input type="submit" value="Connect" name="submit" id="submit" />
            </div>
        </div>

    </form>

    <p class="text-danger"> @ViewBag.Connected</p>
    <p class="text-success"> @ViewBag.ListItem</p>

</div>
