@model IEnumerable<AprajitaRetails.Areas.Uploader.Models.ImportSaleItemWise>

@{
    ViewData["Title"] = "Sale Invoice";
}

    <h2>Sale Invoice List</h2>


<table class="table table-bordered table-danger table-responsive-sm">
    <thead  class="bg-success"  >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceType)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Barcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MRP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasicRate)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.SGST)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillAmnt)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceType)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Barcode)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MRP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasicRate)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.SGST)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.LineTotal)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.BillAmnt)
            </td>
          
            <td>
                @using (Html.BeginForm("ProcessSale", "SalesUploader", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="dDate" value=@item.InvoiceDate.ToShortDateString() />
                    <input type="submit" value="Process" class="btn btn-warning" />
                }
            </td>
        </tr>
}
    </tbody>
</table>
