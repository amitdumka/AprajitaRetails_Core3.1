@model IEnumerable<AprajitaRetails.Areas.Purchase.Models.ProductPurchase>

@{
    ViewData["Title"] = "Purchase Details";
}

<h2>Purchase Details</h2>
<h4 class=" text-md-center text-danger text-monospace ">@ViewBag.Details</h4>
<table class="table table-striped table-borderless table-hover table-sm table-light">
<thead class="table-success">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalBasicAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalTax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr class="table-danger">

            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SuppilerName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TotalQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalBasicAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>

        </tr>
        <tr>
            <td colspan="8">
                <table class="table table-bordered table-warning table-sm table-hover ">
                    <tr class="bg-info ">
                        <th>
                            @Html.DisplayNameFor(model => model.PurchaseItems.First().Barcode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PurchaseItems.First().Cost)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PurchaseItems.First().Qty)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PurchaseItems.First().Unit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PurchaseItems.First().TaxAmout)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PurchaseItems.First().CostValue)
                        </th>
                    </tr>

                    @foreach (var pItem in item.PurchaseItems)
                    {
                        <tr class="text-primary">
                            <td>
                                @Html.DisplayFor(model => pItem.Barcode)
                            </td>
                            <td>
                                @Html.DisplayFor(model => pItem.Cost)
                            </td>
                            <td>
                                @Html.DisplayFor(model => pItem.Qty)
                            </td>
                            <td>
                                @Html.DisplayFor(model => pItem.Unit)
                            </td>
                            <td>
                                @Html.DisplayFor(model => pItem.TaxAmout)
                            </td>
                            <td>
                                @Html.DisplayFor(model => pItem.CostValue)
                            </td>
                        </tr>
                    }
                </table>
            </td>
        </tr>


    }
</tbody>
</table>
