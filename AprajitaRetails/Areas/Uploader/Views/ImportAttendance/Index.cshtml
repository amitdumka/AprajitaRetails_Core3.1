@model AprajitaRetails.Models.Employee
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Attendance Upload</h1>
<div class="">
    <h3 class="text-warning">Upload Attendance(Excel)</h3>
    <hr />
    @using (Html.BeginForm("UploadData", "ImportAttendance", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
    {
        <div class="form form-check">
            <div class="form form-check">
                <div class="form-group form-row ">

                    <div class="control-label col-md-2 text-danger ">Store:</div>
                    <div class="col-md-10  ">
                        @*@Html.DropDownList("UploadType", EnumHelper.GetSelectList(typeof(UploadTypes)), "Select Upload Type", new { @class = "form-control" })*@

                        @Html.RadioButton("StoreCode", "JH0006", true) <b class="text-primary">Dumka </b>
                        @Html.RadioButton("StoreCode", "JH0014", false)<b class="text-success"> Jharkhand</b>

                    </div>
                </div>
            </div>

            <div class="form-group form-row ">

                <div class="control-label col-md-2 text-primary">Excel File:</div>
                <div class="col-md-10 ">
                    <input type="file" id="FileUpload" name="FileUpload" class="btn-warning text-info form-control-sm" />
                </div>
            </div>

            <div class="form-group form-row">

                <div class="col-md-offset-10">
                    <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary form-control-sm" @*onclick="onSubmit()"*@ />

                </div>
            </div>
        </div>
    }

</div>

<div class="">
    <h3 class="text-warning">Upload Attendance Employee Wise (Excel)</h3>
    <hr />
    @using (Html.BeginForm("UploadDataForEmp", "ImportAttendance", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
    {
        <div class="form form-check">
            <div class="form form-check">
                <div class="form-group form-row ">

                    <div class="form-group">
                        <label class="control-label">Staff Name</label>
                        <select asp-for="EmployeeId" id="EmpCode" class="form-control small" asp-items="ViewBag.EmployeeId"></select>
                       

                    </div>
                </div>
            </div>

            <div class="form-group form-row ">

                <div class="control-label col-md-2 text-primary">Excel File:</div>
                <div class="col-md-10 ">
                    <input type="file" id="FileUpload" name="FileUpload" class="btn-warning text-info form-control-sm" />
                </div>
            </div>

            <div class="form-group form-row">

                <div class="col-md-offset-10">
                    <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary form-control-sm" @*onclick="onSubmit()"*@ />

                </div>
            </div>
        </div>
    }
</div>
<div>@ViewBag.Status</div>



