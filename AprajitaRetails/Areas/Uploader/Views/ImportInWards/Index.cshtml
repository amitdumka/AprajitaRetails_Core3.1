@model IEnumerable<AprajitaRetails.Areas.Uploader.Models.ImportInWard>

@{
    ViewData ["Title"] = "Purchase InWard";
}

<h1>Purchase Inward List</h1>


@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table table-sm table-striped table-hover table-bordered">
    <thead class="table-info">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InWardNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InWardDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalMRPValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-success">
        @foreach ( var item in Model )
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InWardNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InWardDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalMRPValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImportDate)
            </td>
            <td class="btn-group btn-group-sm">
                <a class="btn btn-outline-amber" asp-action="Edit" asp-route-id="@item.ImportInWardId">Edit</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ImportInWardId">Details</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ImportInWardId">Delete</a>
            </td>
           
        </tr>
        }
    </tbody>
</table>
