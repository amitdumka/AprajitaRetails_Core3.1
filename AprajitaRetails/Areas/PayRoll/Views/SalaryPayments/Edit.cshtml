@model AprajitaRetails.Models.SalaryPayment

@{
    ViewData["Title"] = "Edit";
}

<h4>Salary Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalaryPaymentId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryMonth" class="control-label"></label>
                <input asp-for="SalaryMonth" class="form-control" />
                <span asp-validation-for="SalaryMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryComponet" class="control-label"></label>
                <select asp-for="SalaryComponet" class="form-control" asp-items="Html.GetEnumSelectList<SalaryComponet>()"></select>
                <span asp-validation-for="SalaryComponet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label"></label>
                <input asp-for="PaymentDate" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayMode" class="control-label"></label>
                <select asp-for="PayMode" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMode>()"></select>
                <span asp-validation-for="PayMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
               <input type="submit" value="Save" class="btn btn-outline-amber" />
            </div>
        </form>
    </div>
</div>

