@model PaginatedList<AprajitaRetails.Models.SalaryPayment>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Salary</h1>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create" id="create" data_modal="">Create New</a>
</p>
<table class="table table-sm  table-bordered table-hover table-striped">
    <thead class="bg-success">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Employee)*@Employee
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.SalaryMonth)*@ Month
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.SalaryComponet)*@ Payment Reason
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PaymentDate)*@ On Date
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Amount)*@ Amount
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PayMode)*@ Payment Mode
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Details)*@ Details
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-white">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.StaffName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryComponet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayMode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td class="btn-group btngroup-sm">
                    <a class="btn btn-outline-amber btn-sm" asp-action="Edit" asp-route-id="@item.SalaryPaymentId" id="edit" data_modal="">Edit</a>
                    <a class="btn btn-outline-cyan btn-sm" asp-action="Details" asp-route-id="@item.SalaryPaymentId" id="detail" data_modal="">Details</a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.SalaryPaymentId" id="delete" data_modal="">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_ModalPop" />