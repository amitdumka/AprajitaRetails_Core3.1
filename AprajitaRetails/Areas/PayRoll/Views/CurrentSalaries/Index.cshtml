@model PaginatedList<AprajitaRetails.Models.CurrentSalary>

@{
    ViewData["Title"] = "Salary Component";
}

<h2 class="text-danger">Salary Component</h2>

<p>
    <a class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Employee)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().BasicSalary)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().SundaySalary)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().LPRate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IncentiveRate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IncentiveTarget)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().WOWBillRate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().WOWBillTarget)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IsSundayBillable)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().EffectiveDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().CloseDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IsEffective)
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.StaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasicSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SundaySalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LPRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncentiveRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncentiveTarget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WOWBillRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WOWBillTarget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSundayBillable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CloseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEffective)
            </td>
            <td class="btn-group btn-group-sm">
               <a  class="btn btn-outline-amber" id="edit" data_modal="" asp-action="Edit" asp-route-id="@item.CurrentSalaryId">Edit</a>
               <a  class="btn btn-outline-info" id="detail" data_modal="" asp-action="Details" asp-route-id="@item.CurrentSalaryId">Details</a>
               <a  class="btn btn-outline-danger" id="delete" data_modal="" asp-action="Delete" asp-route-id="@item.CurrentSalaryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_ModalPop" />