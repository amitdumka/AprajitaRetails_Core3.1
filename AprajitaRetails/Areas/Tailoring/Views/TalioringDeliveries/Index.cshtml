@model PaginatedList<AprajitaRetails.Models.TalioringDelivery>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Delivery</h1>

<p>
    <a class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Booking.CustName)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().DeliveryDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Booking)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().InvNo)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Amount)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Remarks)
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
         <tr>
             <td>
                 @Html.DisplayFor(modelItem => item.Booking.CustName)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.DeliveryDate)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.Booking.BookingSlipNo)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.InvNo)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.Amount)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.Remarks)
             </td>
             <td class="btn-group btn-group-sm">
                 <a class="btn btn-outline-amber" id="edit" data_modal="" asp-action="Edit" asp-route-id="@item.TalioringDeliveryId">Edit</a>
                 <a class="btn btn-outline-info" id="detail" data_modal="" asp-action="Details" asp-route-id="@item.TalioringDeliveryId">Details</a>
                 <a class="btn btn-outline-danger" id="delete" data_modal="" asp-action="Delete" asp-route-id="@item.TalioringDeliveryId">Delete</a>
             </td>
         </tr>
}
    </tbody>
</table>
<partial name="_ModalPop" />