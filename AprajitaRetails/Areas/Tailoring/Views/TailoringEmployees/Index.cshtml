@model PaginatedList<AprajitaRetails.Models.TailoringEmployee>

@{
    ViewData["Title"] = "Index";
}

    <h1 class="text-danger">Tailors</h1>

<p>
    <a class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().StaffName)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().MobileNo)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().JoiningDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().LeavingDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IsWorking)
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoiningDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeavingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsWorking)
            </td>
            <td class="btn-group btn-group-sm">
                <a class="btn btn-outline-amber" id="edit" data_modal="" asp-action="Edit" asp-route-id="@item.TailoringEmployeeId">Edit</a>
                <a class="btn btn-outline-info" id="detail" data_modal="" asp-action="Details" asp-route-id="@item.TailoringEmployeeId">Details</a>
                <a class="btn btn-outline-danger" id="delete" data_modal="" asp-action="Delete" asp-route-id="@item.TailoringEmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_ModalPop" />