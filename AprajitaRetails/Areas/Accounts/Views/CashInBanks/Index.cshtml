@model PaginatedList<AprajitaRetails.Models.CashInBank>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Index</h1>

<p>
   <a  class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.CIBDate)*@Date
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.OpenningBalance)*@ Openning Bal
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ClosingBalance)*@ Closing Bal
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CashIn)*@ Cash In
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CashOut)*@ Cash Out
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CIBDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenningBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CashIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CashOut)
            </td>
            <td>
               <a  class="btn btn-outline-amber" id="edit" data_moda="" asp-action="Edit" asp-route-id="@item.CashInBankId">Edit</a> |
               <a  class="btn btn-outline-info" id="detail" data_moda="" asp-action="Details" asp-route-id="@item.CashInBankId">Details</a> |
               <a  class="btn btn-outline-danger" id="delete" data_moda="" asp-action="Delete" asp-route-id="@item.CashInBankId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
