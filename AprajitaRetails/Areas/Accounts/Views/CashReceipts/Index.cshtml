@model PaginatedList<AprajitaRetails.Models.CashReceipt>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Cash Receipt</h1>

<p>
   <a  class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create New</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().InwardDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Mode)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().ReceiptFrom)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Amount)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().SlipNo)
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InwardDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mode.Transcation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlipNo)
            </td>
            <td class="btn-group btn-group-sm">
               <a  class="btn btn-outline-amber" asp-action="Edit" asp-route-id="@item.CashReceiptId"  id="edit" data_modal="">Edit</a> 
               <a  class="btn btn-outline-info " asp-action="Details" asp-route-id="@item.CashReceiptId" id="detail" data_modal="">Details</a> 
               <a  class="btn btn-outline-danger " asp-action="Delete" asp-route-id="@item.CashReceiptId" id="delete" data_modal="">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_ModalPop" />