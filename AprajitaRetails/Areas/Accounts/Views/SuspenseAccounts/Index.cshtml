@model PaginatedList<AprajitaRetails.Models.SuspenseAccount>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Index</h1>

<p>
    <a class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().EntryDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().ReferanceDetails)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().InAmount)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().OutAmount)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().IsCleared)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().ClearedDetails)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().ReviewBy)
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferanceDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCleared)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClearedDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewBy)
            </td>
            <td>
               <a  class="btn btn-outline-amber" id="edit" data_modal="" asp-action="Edit" asp-route-id="@item.SuspenseAccountId">Edit</a>
               <a  class="btn btn-outline-info" id="detail" data_modal="" asp-action="Details" asp-route-id="@item.SuspenseAccountId">Details</a>
               <a  class="btn btn-outline-danger" id="delete" data_modal="" asp-action="Delete" asp-route-id="@item.SuspenseAccountId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_ModalPop" />