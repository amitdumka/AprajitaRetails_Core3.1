            </div>
            <div class="form-group">
                <label asp-for="ClosingBalance" class="control-label"></label>
                <input asp-for="ClosingBalance" class="form-control" />
                <span asp-validation-for="ClosingBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CashIn" class="control-label"></label>
                <input asp-for="CashIn" class="form-control" />
                <span asp-validation-for="CashIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CashOut" class="control-label"></label>
                <input asp-for="CashOut" class="form-control" />
                <span asp-validation-for="CashOut" class="text-danger"></span>
            </div>
            <div class="form-group">
               <input type="submit" value="Save" class="btn btn-outline-amber" />
            </div>
