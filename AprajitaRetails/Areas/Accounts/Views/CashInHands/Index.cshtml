@model PaginatedList<AprajitaRetails.Models.CashInHand>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Index</h1>

<p>
   <a  class="btn btn-primary btn-sm" asp-action="Create">Create New</a>
</p>
<table class="table table-sm table-responsive table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.CIHDate)*@Date
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.OpenningBalance)*@Openning Bal
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ClosingBalance)*@Closing Bal
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CashIn)*@Cash In
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CashOut)*@ Cash Out
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CIHDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenningBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CashIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CashOut)
            </td>
            <td>
               <a  class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.CashInHandId">Edit</a> |
               <a  class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.CashInHandId">Details</a> |
               <a  class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@item.CashInHandId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
