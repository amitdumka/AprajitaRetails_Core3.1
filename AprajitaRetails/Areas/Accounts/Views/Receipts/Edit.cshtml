@model AprajitaRetails.Models.Receipt

@{
    ViewData["Title"] = "Edit";
}



<h4>Receipt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReceiptId" />
            <div class="form-group">
                <label asp-for="RecieptDate" class="control-label"></label>
                <input asp-for="RecieptDate" class="form-control" />
                <span asp-validation-for="RecieptDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptFrom" class="control-label"></label>
                <input asp-for="ReceiptFrom" class="form-control" />
                <span asp-validation-for="ReceiptFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayMode" class="control-label"></label>
                <select asp-for="PayMode" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMode>()"></select>
                <span asp-validation-for="PayMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptDetails" class="control-label"></label>
                <input asp-for="ReceiptDetails" class="form-control" />
                <span asp-validation-for="ReceiptDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecieptSlipNo" class="control-label"></label>
                <input asp-for="RecieptSlipNo" class="form-control" />
                <span asp-validation-for="RecieptSlipNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-amber" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
