@model PaginatedList<AprajitaRetails.Models.Receipt>

@{
    ViewData["Title"] = "Receipt";
}

    <h1 class="text-danger">Receipt</h1>

<p>
   <a  class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create New</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().RecieptDate)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().ReceiptFrom)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().PayMode)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().ReceiptDetails)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Amount)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().RecieptSlipNo)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.FirstOrDefault().Remarks)
            </th>
            <th></th>
        </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecieptDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayMode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecieptSlipNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td class="btn-group btn-group-sm">
               <a  class="btn btn-outline-amber" asp-action="Edit" asp-route-id="@item.ReceiptId"  id="edit" data_modal="" >Edit</a> 
               <a  class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ReceiptId"  id="detail" data_modal="">Details</a>
               <a  class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ReceiptId"  id="delete" data_modal="">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_ModalPop" />