@model PaginatedList<AprajitaRetails.Models.DuesList>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Dues List</h1>

<p>
   <a  class="btn btn-outline-light-green btn-sm" asp-action="Create" id="create" data_modal="">Create</a>
</p>
<table class="table table-sm table-bordered table-hover table-striped">
     <thead class="bg-success">
         <tr>
             <th>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().DailySale)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().Amount)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().IsPartialRecovery)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().IsRecovered)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.FirstOrDefault().RecoveryDate)
             </th>

             
             <th></th>
         </tr>
    </thead>
     <tbody class="bg-white">
@foreach (var item in Model) {
         <tr>
             <td>
                 @Html.DisplayFor(modelItem => item.DailySale.InvNo)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.Amount)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.IsPartialRecovery)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.IsRecovered)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.RecoveryDate)
             </td>


             <td class="btn-group btn-group-sm">
                 <a class="btn btn-outline-amber" id="edit" data_modal="" asp-action="Edit" asp-route-id="@item.DuesListId">Edit</a>
                 <a class="btn btn-outline-info" id="detail" data_modal="" asp-action="Details" asp-route-id="@item.DuesListId">Details</a>
                 <a class="btn btn-outline-danger" id="delete" data_modal="" asp-action="Delete" asp-route-id="@item.DuesListId">Delete</a>
             </td>
         </tr>
}
    </tbody>
</table>
<partial name="_ModalPop" />