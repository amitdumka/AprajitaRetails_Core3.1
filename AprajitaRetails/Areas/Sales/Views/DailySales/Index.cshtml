@model IEnumerable<AprajitaRetails.Models.DailySale>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger">Daily Sales</h1>
<div>
    <table class="table table-striped table-bordered table-condensed  bg-warning">
        <tr class="text-primary">
            <th>Today Sale</th>
            <th>Manual Sale</th>
            <th>Monthly Sale</th>
        </tr>
        <tr class="text-center ">
            <td class="text-success"><b>@string.Format("{0:C}", ViewBag.TodaySale)</b></td>
            <td class="text-success"><b>@string.Format("{0:C}", ViewBag.ManualSale)</b></td>
            <td class="text-success"><b>@string.Format("{0:C}", ViewBag.MonthlySale)</b></td>
        </tr>
        <tr class="text-danger">
            <th>Total Dues</th>
            <th>Cash-In-Hands</th>
            <th></th>
        </tr>
        <tr class="text-center ">

            <td class="text-success"> <b>@string.Format("{0:C}", ViewBag.DuesAmount) </b></td>
            <td class="text-success"> <b>@string.Format("{0:C}", ViewBag.CashInHand)</b></td>
            <td class="text-success"></td>
        </tr>
        <tr class="text-danger">
            @using (Html.BeginForm("Index", "DailySales", FormMethod.Get))
            {
                <td class=""><strong> Salesman: @Html.DropDownList("salesmanId", "All")</strong></td>
                <td>
                    <strong>
                        By Date: @Html.EditorFor(model => model.FirstOrDefault().SaleDate, new { htmlAttributes = new { @value = DateTime.Now.ToShortDateString() } })
                        @Html.ValidationMessageFor(model => model.FirstOrDefault().SaleDate, "", new { @class = "text-danger" })
                    </strong>
                </td>
                <td>
                    <strong>
                        Or
                        <span class="glyphicon glyphicon-search"> </span>  By InvoiceNo: @Html.TextBox("SearchString") <input type="submit" value="Filter" class=" btn btn-warning " />
                    </strong>
                </td>
            }
        </tr>
        <tr>
            <th> @Html.ActionLink("Create New ", "Create", null, new { data_modal = "", @class = "btn btn-success " })</th>
            <th> @Html.ActionLink("     All Invoice", "Index", new { id = 101 }, new { @class = "btn btn-info" })</th>
            <th> @Html.ActionLink("     Today", "Index", new { id = 0 }, new { @class = "btn btn-info" })</th>
        </tr>

    </table>

</div>

<p>
    <a class="btn btn-teal btn-sm" asp-action="Create" id="create" data_modal="">Create New</a>
</p>
<table class="table table-sm  w-auto  table-hover table-striped table-bordered">
    <thead class="bg-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SaleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayMode)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CashAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salesman)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.IsDue)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsManualBill)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.IsTailoringBill)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsSaleReturn)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-white">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SaleDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayMode)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CashAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salesman.SalesmanId)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsDue)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsManualBill)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsTailoringBill)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsSaleReturn)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>*@
                <td class="btn-group">
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@item.DailySaleId" id="edit" data_modal="">Edit</a>
                    <a class="btn btn-outline-deep-orange btn-sm" asp-action="Details" asp-route-id="@item.DailySaleId" id="detail" data_modal="">Details</a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.DailySaleId" id="delete" data_modal="">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in' tabindex="-1" role="dialog" area-labledby="myModalLable" area-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-notify " role="document" id="modalHead">
        <div class="modal-content card">
            <div class="modal-header card-header">
                <h4 class="modal-title w-100" id="myModalLabel">Modal title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id='myModalContent' class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary btn-sm">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">

    $(function () {
        $.ajaxSetup({ cache: false });
        $(document).on('click', 'a[data_modal]',/* $("a[data_modal]").on("click",*/ function (e) {
            if (this.id=="edit") {
                $("#myModalLabel").html("Edit Items");
                $("#modalHead").addClass("modal-warning");
            }
            else if (this.id == "detail") {
                $("#myModalLabel").html("Detail Items");
                $("#modalHead").addClass("modal-success");
            }
            else if (this.id == "create") {
                $("#myModalLabel").html("Create Items");
                $("#modalHead").addClass("modal-primary");
            }
            else if (this.id == "delete") {
                $("#myModalLabel").html("Delete Items");
                $("#modalHead").addClass("modal-info");
                }
            $('#myModalContent').load(this.href, function () {


                $('#myModal').modal({
                    keyboard: true
                }, 'show');
            });
            return false;
        });
    });

    </script>
}