@model IEnumerable<AprajitaRetails.Areas.Sales.Models.SaleTaxType>

@{
    ViewData["Title"] = "Taxes";
}

<h1>OutPut Taxes</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-light-green btn-sm" id="create" data_modal="">Create New</a>
</p>
<table class="table table-bordered table-hover table-striped tables-sm">
    <thead class="bg-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaxName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompositeRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompositeRate)
                </td>
                <td class="btn-group btn-group-sm">
                    <a class="btn btn-outline-amber" id="edit" data_modal="" asp-action="Edit" asp-route-id="@item.SaleTaxTypeId">Edit</a>
                    <a class="btn btn-outline-info btn-sm" id="detail" data_modal="" asp-action="Details" asp-route-id="@item.SaleTaxTypeId">Details</a>
                    <a class="btn btn-outline-danger btn-sm" id="delete" data_modal="" asp-action="Delete" asp-route-id="@item.SaleTaxTypeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
